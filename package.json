{
  "name": "pledger-electron-app",
  "version": "2.5.0",
  "description": "Pledger.io desktop application",
  "main": "src/main/electron/main.js",
  "author": "JongSoft Development",
  "license": "MIT",
  "scripts": {
    "postinstall": "install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.jongsoft.finance",
    "productName": "Pledger.io",
    "copyright": "Copyright 2023 JongSoft Development",
    "win": {
      "target": "nsis",
      "icon": "src/main/electron/icon.png"
    },
    "snap": {
      "confinement": "strict",
      "summary": "Pledger.io: Your personal finance management helper",
      "grade": "stable",
      "stagePackages": [
        "opendjk-15-jre"
      ],
      "plugs": [
        "network-bind",
        "desktop"
      ]
    },
    "directories": {
      "buildResources": "build/electron",
      "output": "build/bundle"
    },
    "files": [
      "src/main/electron/*",
      "**/node_modules/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin"
    ],
    "extraFiles": [
      {
        "from": "build/layers/libs",
        "to": "./fintrack/libs",
        "filter": [
          "!fintrack-api*.jar",
          "!fintrack-ui*.jar",
          "!rule-engine*.jar",
          "!domain*.jar",
          "!jpa-repository*.jar",
          "!bpmn-process*.jar"
        ]
      },
      {
        "from": "build/layers/libs",
        "to": "./fintrack/core",
        "filter": [
          "fintrack-api*.jar",
          "fintrack-ui*.jar",
          "rule-engine*.jar",
          "domain*.jar",
          "jpa-repository*.jar",
          "bpmn-process*.jar"
        ]
      }
    ],
    "extraResources": [
      {
        "from": "src/main/electron",
        "to": ".",
        "filter": "*.html"
      },
      {
        "from": "src/main",
        "to": "../fintrack/",
        "filter": [
          "rsa-2048bit-key-pair.pem"
        ]
      }
    ]
  },
  "devDependencies": {
    "electron": "22.3.23",
    "electron-builder": "^22.9.1"
  },
  "dependencies": {
    "minimal-request-promise": "^1.5.0",
    "tree-kill": "^1.2.2"
  }
}
